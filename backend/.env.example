# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/tweekchat

# JWT Secrets
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_make_it_long_and_random

# Client URL
CLIENT_URL=http://localhost:3000

# AI API (Optional - for AI chatbot)
OPENAI_API_KEY=your_openai_api_key_here

# OAuth Configuration (Google & GitHub Login)
# Get Google credentials: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Get GitHub credentials: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Session Secret (generate a random string)
SESSION_SECRET=your_session_secret_key_change_this_to_random_string
